<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#000000">

    <ImageView
        android:id="@+id/imgCopertina"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/logo" />

    <LinearLayout
        android:id="@+id/layBarraNotifica"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTitoloNotifica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:padding="2dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:tag="tabCaption"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimary"
            android:shadowColor="#ff000000"
            android:textStyle="bold"
            android:shadowDy="2"
            android:shadowDx="2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtTitoloNotifica2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:padding="2dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:tag="tabCaption"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimary"
            android:shadowColor="#ff000000"
            android:textStyle="bold"
            android:shadowDy="2"
            android:shadowDx="2"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:baselineAligned="false"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="5" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgCeSegnale"
                android:layout_width="40dp"
                android:scaleType="fitCenter"
                android:layout_height="40dp"
                android:src="@drawable/gps" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:gravity="right|center_vertical">

            <ImageView
                android:id="@+id/imgCambioSezione"
                android:layout_width="40dp"
                android:scaleType="fitCenter"
                android:layout_height="40dp"
                android:src="@drawable/cambiosezione" />

            <ImageView
                android:id="@+id/imgPlayStop"
                android:layout_width="40dp"
                android:scaleType="fitCenter"
                android:layout_height="40dp"
                android:src="@drawable/icona_play" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_width="wrap_content"
        android:text="GPS One"
        android:textColor="#AAAA00"
        android:layout_height="wrap_content" />

</RelativeLayout>